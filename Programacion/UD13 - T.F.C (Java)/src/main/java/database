drop database if exists banco;
create database banco;
use banco;
create table usuarios(id int primary key auto_increment, nombre varchar(255), primerApellido varchar(255), segundoApellido varchar(255), contasenya varchar(255), email varchar(255), direccion varchar(255), telefono int);
create table cuentas(id int primary key auto_increment, id_usuario int, nombreBanco varchar(255), tipoCuenta varchar(255), foreign key (id_usuario) references usuarios (id));
create table cuentaAhorro(id int primary key auto_increment, id_cuenta int, saldo float, fechaApertura date, foreign key (id_cuenta) references cuentas (id));
create table cuentaCorriente(id int primary key auto_increment, id_cuenta int, saldo float, fechaApertura date, foreign key (id_cuenta) references cuentas (id));
create table ingresos(id int primary key auto_increment, id_cuenta int, cantidadIngreso float, motivo varchar(255), fecha date, foreign key (id_cuenta) references cuentas (id));
create table gastos(id int primary key auto_increment, id_cuenta int, cantidadGasto float, motivo varchar(255), fecha date, foreign key (id_cuenta) references cuentas (id));
create table inversiones(id int primary key auto_increment, id_usuario int, cantidad float, nombreCompanya varchar(255), foreign key (id_usuario) references usuarios(id));